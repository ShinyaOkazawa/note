{
  "compilerOptions": {
    "target": "ESNext",                  // 最新のECMAScript仕様をターゲットにする
    "module": "ESNext",                  // ESモジュールを使用する
    "strict": true,                      // 厳格な型チェックを有効化
    "esModuleInterop": true,             // ESモジュールとCommonJSモジュールのインタープロパティビリティを許可
    "skipLibCheck": true,                // ライブラリの型チェックをスキップ
    "forceConsistentCasingInFileNames": true, // ファイル名の大文字小文字を強制する
  },
}
